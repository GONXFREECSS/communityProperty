<view >
    <slideTab tList="{{statusType}}"   bind:changeCurrent="swichNav" currentTab="{{currentType}}" >
      <swiper current="{{currentType}}" duration="300" bindchange="bindChange" style="height: {{windowHeight-35}}px;margin-top:35px;">
        <block>
          <swiper-item wx:for="{{list}}">
            <view class="no-order" hidden="{{list.length ? true : false}}">
              <image src="../../img/no-order.png" class="no-order-img"></image>
              <view class="text">暂无订单</view>
            </view>
            <scroll-view scroll-y="true" class="order-list" scroll-with-animation="true" lower-threshold="1" bindscrolltolower="scrolltolower" style="height: {{windowHeight-35}}px;" hidden="{{item ? flase : true}}">
              <view class="a-order" wx:for="{{list}}"  wx:key="childIndex" wx:for-item="item" >
                <view class="order-date">
                    <view class="date-box">报修时间：{{item.faultTime}}</view>
                </view>
                <view class="goods-info" bindtap="orderDetail" data-id="{{item.id}}">
                    <view class="goods-des">
                      <view>设备编号 : {{item.code}} </view>
                      <view wx:if="{{item.content && item.content != ''}}">故障描述： {{item.content}}</view>
                    </view>
                </view>
                <view >
                    <scroll-view class="goods-img-container" scroll-x="true">
                        <view class="img-box" wx:for="{{item.pics}}" wx:for-item="pic_item">
                            <image src="{{pic_item}}" class="goods-img"></image>
                        </view>
                    </scroll-view>
                </view>
              </view>
            </scroll-view>
          </swiper-item>
        </block>
      </swiper>
    </slideTab>
</view>